<?php
$form = $this->form;
$form->setAttribute('action', $this->url('notification', array('action' => 'addNotification', 'id' => $this->uuid)))
    ->prepare();

$sendItemId = $form->get('sendItemId');

echo $this->form()->openTag($form);

echo $this->formRow($sendItemId);

echo $this->formElement($form->get('submit'));
echo $this->form()->closeTag();
?>